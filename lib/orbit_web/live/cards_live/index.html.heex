<h1>Listing Cards</h1>

<%= if @live_action in [:new, :edit] do %>
  <.modal return_to={Routes.cards_index_path(@socket, :index)}>
    <.live_component
      module={OrbitWeb.CardsLive.FormComponent}
      id={@cards.id || :new}
      title={@page_title}
      action={@live_action}
      cards={@cards}
      return_to={Routes.cards_index_path(@socket, :index)}
    />
  </.modal>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>

      <th></th>
    </tr>
  </thead>
  <tbody id="cards">
    <%= for cards <- @cards_collection do %>
      <tr id={"cards-#{cards.id}"}>
        <td><%= cards.title %></td>

        <td>
          <span><%= live_redirect "Show", to: Routes.cards_show_path(@socket, :show, cards) %></span>
          <span><%= live_patch "Edit", to: Routes.cards_index_path(@socket, :edit, cards) %></span>
          <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: cards.id, data: [confirm: "Are you sure?"] %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span><%= live_patch "New Cards", to: Routes.cards_index_path(@socket, :new) %></span>
